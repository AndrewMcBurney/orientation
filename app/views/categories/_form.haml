.g
  .g-b.g-b--m--2of3

    %p.label.mbxs= label_text

    .form
      = simple_form_for @category do | f |

        .form-field
          = f.input_field :label, placeholder: 'Enter a Department Label',
            class: 'form-input form-input--clear tfh tsl ts--m--xl'

        .form-field
          = f.label :article_tokens do
            %span.form-label.label
              = "Articles (search articles to add for department)".html_safe
            = f.input_field :article_tokens, data: { load: @category_articles }

        = f.submit button_text, class: 'btn btn--a btn--l'
        = link_to 'Delete', @category, class: 'btn btn--b btn--l', data: { method: :delete, confirm: "Are you sure?" }

    = link_to 'Edit Department', edit_category_url( @category ), class: 'btn btn--a',
