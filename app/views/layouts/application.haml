!!! 5
%html{ lang: 'en' }
  %head{ profile: 'http://a9.com/-/spec/opensearch/1.1/' }

    %meta{ charset: 'utf-8' }
    %meta{ content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }

    %title= content_for(:page_title) || @page_title || 'Orientation'

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => false
    = stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track' => false
    = favicon_link_tag ENV['ORIENTATION_FAVICON']
    = csrf_meta_tags
    = action_cable_meta_tag
    = open_search_description_link_tag
    = hidden_field_tag 'action_name', action_name
    = hidden_field_tag 'controller_name', controller_name

  %body{ class: body_class }

    = render 'layouts/header'

    - if flash[:error]
      .bulletin.bulletin--warning= flash[:error]
    - if flash[:notice]
      .bulletin= flash[:notice]

    %main= yield

    = javascript_include_tag 'vendor', 'data-turbolinks-track' => false
    = javascript_include_tag 'application', 'data-turbolinks-track' => false
    = cloudinary_js_config
