( function() {
  var fallback = "We didn't find an author whose name matches.";
  var authorMarkup = "<%= escape_javascript( render( @authors ) ) %>";

  $( '.js-search-results' ).html( authorMarkup );

  // there are matching results
  if ( authorMarkup ) {
    $( '.js-search-results' ).html( authorMarkup );

  // there are no matching results
  } else {
    $( '.js-search-results' ).html( fallback );
  }
} )();
