%li.card.list-item.article.has-signal{ class: ('has-article-footer' if article.tags.any? )}
  = article.signal
  = link_to article.title, article, class: 'article-title'
  - if local_assigns.key?(:highlight_search_keywords) && local_assigns[:highlight_search_keywords]
    %span.search-highlight= article.pg_search_highlight.html_safe
  .article-footer
    - if article.tags.any?
      %ul.list.list--inline.list--inline--xs.left
        - article.tags.each do |t|
          %li.list-item= link_to t.name, tag_path(t), class: 'label label--link'
    - if article.categories.any?
      %ul.list.list--inline.list--inline--xs.right
        - article.categories.each do |c|
          %li.list-item= link_to c.label, category_path(c), class: 'label label--link--dark'
